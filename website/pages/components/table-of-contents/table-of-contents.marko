<macro|{value, table}| name="sidebar-list-item">
  <if(value)>
    <link-to href=`#${value}`>${value}</link-to>
  </if>
  <if(table && table.length)>
    <for|item| of=table>
      <sidebar-list-item ...item />
    </for>
  </if>
</macro>

<box as="nav" position="sticky" d=['none', 'block'] flex=1 top=0 pt=4 pr=8 pb=6 pl=6>
